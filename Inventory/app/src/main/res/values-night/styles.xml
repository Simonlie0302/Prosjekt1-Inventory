<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="progressBarOrange" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/purple_700</item>
    </style>

    <style name="progressBarTeal" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/teal_700</item>
    </style>

    <style name="mainBackground" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:background">#656565</item>
    </style>

    <style name="progressBarBackground" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:background">#4100BB</item>
    </style>


    <style name="cardBackground" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="cardBackgroundColor">#656565</item>
    </style>

    <style name="btnBackground" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:background">#4B00C3</item>
    </style>


</resources>