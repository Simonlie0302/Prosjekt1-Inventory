<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryDark">@color/orange</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="progressBarOrange" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="progressBarTeal" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/teal_200</item>
    </style>

    <style name="mainBackground" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/white</item>
    </style>

    <style name="cardBackgroundMain" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/teal_200</item>
    </style>

    <style name="cardBackground" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="cardBackgroundDetail" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="cardBackgroundColor">@color/teal_200</item>
    </style>

    <style name="progressBarBackground" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/orange</item>
    </style>

    <style name="btnBackground" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/orange</item>
    </style>



</resources>